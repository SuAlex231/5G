# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ticketing_db

# Redis
REDIS_URL=redis://redis:6379/0

# MinIO Object Storage
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio123
MINIO_BUCKET_UPLOADS=uploads
MINIO_BUCKET_EXPORTS=exports

# OCR Service
OCR_SERVICE_URL=http://ocr:8001

# JWT Security
JWT_SECRET=change-me-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
MAX_IMAGES_PER_TICKET=8
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif
MAX_FILE_SIZE_MB=10

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# External Services
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
OCR_HOST=0.0.0.0
OCR_PORT=8001

# Email (for future use)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@example.com

# Notes:
# 1. Copy this file to .env and modify values as needed
# 2. To change host/IP for all services, update the hostnames in docker-compose.yml
# 3. For external access, change 'localhost' to your server IP in web/.env as well
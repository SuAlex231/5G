# 5G Ticketing System Environment Configuration
# Copy this file to .env and modify values as needed
# This is the ONLY file you need to change to switch hosts/IPs

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/5g_ticketing
POSTGRES_DB=5g_ticketing
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# MinIO Configuration (Object Storage)
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_SECURE=false
MINIO_BUCKET_UPLOADS=uploads
MINIO_BUCKET_EXPORTS=exports

# OCR Service Configuration
OCR_SERVICE_URL=http://ocr:8001
OCR_PORT=8001

# Backend API Configuration
BACKEND_PORT=8000
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
MAX_IMAGES_PER_TICKET=8
CORS_ORIGINS=http://localhost:5173

# Web App Configuration
WEB_PORT=5173
VITE_API_BASE_URL=http://localhost:8000

# Environment
ENVIRONMENT=development

# =================================================================
# TO CHANGE FROM LOCALHOST TO ANOTHER HOST/IP:
# 1. Update MINIO_ENDPOINT if MinIO will be external
# 2. Update VITE_API_BASE_URL to point to your backend
# 3. Update CORS_ORIGINS to match your web app URL
# 4. Copy this to .env and also update web/.env with VITE_API_BASE_URL
# 5. Run: docker compose down && docker compose up -d --build
# =================================================================